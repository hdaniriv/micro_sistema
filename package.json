{
  "name": "microservicio-principal",
  "version": "1.0.0",
  "description": "Microservicio principal para gestión de usuarios, autenticación y coordinación del sistema",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "node dist/main",
    "start:dev": "nodemon --exec ts-node src/main.ts",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "setup:dev": "npm install && docker-compose up -d",
    "setup:vscode:win": "powershell -ExecutionPolicy Bypass -File setup-vscode-extensions.ps1",
    "setup:vscode:unix": "chmod +x setup-vscode-extensions.sh && ./setup-vscode-extensions.sh",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:logs": "docker-compose logs -f",
    "db:restart": "docker-compose restart",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hdaniriv/micro_sistema.git"
  },
  "keywords": [
    "microservices",
    "nestjs",
    "jwt",
    "mysql",
    "ddd",
    "authentication"
  ],
  "author": "Daniel",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/hdaniriv/micro_sistema/issues"
  },
  "homepage": "https://github.com/hdaniriv/micro_sistema#readme",
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "mysql2": "^3.15.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^24.6.2",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.37.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
