# Configuración de Base de Datos
DB_HOST=localhost
DB_PORT=3307
DB_USERNAME=root
DB_PASSWORD=YOUR_MYSQL_PASSWORD_HERE
DB_DATABASE=gestion_sistema
DB_SSL=false # En proveedores como PlanetScale usar true

# Configuración del Servidor
PORT=3000
NODE_ENV=development

# JWT Configuration - IMPORTANTE: Cambiar en producción
JWT_SECRET=YOUR_JWT_SECRET_KEY_HERE_MINIMUM_32_CHARACTERS
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=YOUR_JWT_REFRESH_SECRET_KEY_HERE_MINIMUM_32_CHARACTERS
JWT_REFRESH_EXPIRATION=7d

# Configuración de Encriptación
BCRYPT_ROUNDS=12

# Microservicios (TCP)
GESTION_MS_HOST=127.0.0.1
GESTION_MS_PORT=4010
GESTION_MS_TIMEOUT=5000

# Configuración de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:4200

# Configuración de Logs
LOG_LEVEL=error

# Configuración de Swagger
SWAGGER_TITLE=Microservicio Principal API
SWAGGER_DESCRIPTION=API para gestión de usuarios, autenticación y coordinación del sistema
SWAGGER_VERSION=1.0.0
SWAGGER_PATH=api/docs
