# Producción — Gateway/API (NestJS + MySQL)

# Servidor
NODE_ENV=production
PORT=3000

# MySQL (PlanetScale / Railway / etc.)
DB_HOST=your-mysql-host
DB_PORT=3306
DB_USERNAME=your-user
DB_PASSWORD=your-password
DB_DATABASE=gestion_sistema
DB_SSL=true

# JWT
JWT_SECRET=change-this-to-a-strong-secret
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=change-this-to-a-strong-refresh-secret
JWT_REFRESH_EXPIRATION=7d

# CORS — dominio del Frontend (Vercel/Netlify)
CORS_ORIGIN=https://your-frontend.vercel.app

# Microservicio Gestión (TCP)
GESTION_MS_HOST=gestion-ms.fly.dev
GESTION_MS_PORT=4010
GESTION_MS_TIMEOUT=5000

# Logs
LOG_LEVEL=error

# Swagger (opcional en producción)
SWAGGER_TITLE=Microservicio Principal API
SWAGGER_DESCRIPTION=API para gestión de usuarios, autenticación y coordinación del sistema
SWAGGER_VERSION=1.0.0
SWAGGER_PATH=api/docs
